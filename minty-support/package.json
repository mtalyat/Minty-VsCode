{
  "name": "minty-support",
  "displayName": "Minty Support",
  "description": "Support for Minty game engine files.",
  "version": "1.4.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "publisher": "mtalyat",
  "repository": {
    "type": "git",
    "url": "https://github.com/mtalyat/Minty-VsCode"
  },
  "bugs": {
    "url": "https://github.com/mtalyat/Minty-VsCode/issues"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "Minty",
    "game engine",
    "game development",
    "vscode extension"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "minty",
        "aliases": [
          "Minty",
          "minty"
        ],
        "extensions": [
          ".minty",
          ".meta"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "minty",
        "scopeName": "source.minty",
        "path": "./syntaxes/minty.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Minty",
        "uiTheme": "vs-dark",
        "path": "./themes/minty-default-theme.json"
      }
    ],
    "documentLinkProvider": [
      {
        "language": "minty"
      }
    ],
    "commands": [
      {
        "command": "minty-support.generateUUID",
        "title": "Minty: Generate UUID"
      },
      {
        "command": "minty-support.generateShortUUID",
        "title": "Minty: Generate Short UUID"
      },
      {
        "command": "minty-support.insertUUID",
        "title": "Minty: Insert UUID"
      },
      {
        "command": "minty-support.insertNextUUID",
        "title": "Minty: Insert Next UUID"
      },
      {
        "command": "minty-support.insertShortUUID",
        "title": "Minty: Insert Short UUID"
      },
      {
        "command": "minty-support.openMintyDocs",
        "title": "Minty: Open Documentation"
      },
      {
        "command": "minty-support.openMintyRepo",
        "title": "Minty: Open GitHub Repository"
      },
      {
        "command": "minty-support.createMintyFile",
        "title": "Minty: Create Asset"
      },
      {
        "command": "minty-support.openMintyDirectory",
        "title": "Minty: Open Minty Directory"
      },
      {
        "command": "minty-support.findAssetUUID",
        "title": "Minty: Find Asset UUID"
      },
      {
        "command": "minty-support.findAssetPath",
        "title": "Minty: Find Asset Path"
      },
      {
        "command": "minty-support.createMetaFile",
        "title": "Minty: Create Meta File"
      },
      {
        "command": "minty-support.compileShader",
        "title": "Minty: Compile Shader"
      }
    ],
    "keybindings": [
      {
        "command": "minty-support.findAssetUUID",
        "key": "ctrl+alt+u ctrl+alt+u",
        "when": "editorTextFocus"
      },
      {
        "command": "minty-support.insertUUID",
        "key": "ctrl+alt+u ctrl+alt+i",
        "when": "editorTextFocus"
      },
      {
        "command": "minty-support.insertNextUUID",
        "key": "ctrl+alt+u ctrl+alt+n",
        "when": "editorTextFocus"
      },
      {
        "command": "minty-support.insertShortUUID",
        "key": "ctrl+alt+u ctrl+alt+o",
        "when": "editorTextFocus"
      },
      {
        "command": "minty-support.findAssetPath",
        "key": "ctrl+alt+u ctrl+alt+y"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "minty-support.createMintyFile",
          "group": "minty-support",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "minty-support.createMetaFile",
          "group": "minty-support",
          "when": "!explorerResourceIsFolder && (resourceExtname != .meta && resourceExtname != .frag && resourceExtname != .vert && resourceExtname != .glsl)"
        },
        {
          "command": "minty-support.compileShader",
          "group": "minty-support",
          "when": "!explorerResourceIsFolder && (resourceExtname == .frag || resourceExtname == .vert || resourceExtname == .glsl)"
        }
      ]
    },
    "colors": [
      {
        "id": "constant.other.uuid.default.minty",
        "description": "Color for UUIDs in Minty files",
        "defaults": {
          "dark": "#a65bfc",
          "light": "#a65bfc",
          "highContrast": "#a65bfc"
        }
      },
      {
        "id": "constant.other.uuid.local.minty",
        "description": "Color for local UUID references in Minty files",
        "defaults": {
          "dark": "#e15bfc",
          "light": "#e15bfc",
          "highContrast": "#e15bfc"
        }
      },
      {
        "id": "constant.other.uuid.global.minty",
        "description": "Color for global UUID references in Minty files",
        "defaults": {
          "dark": "#fc5b93",
          "light": "#fc5b93",
          "highContrast": "#fc5b93"
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}